<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlue"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/lightBlue"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="16dp"
            android:text="Budget Details"
            android:textColor="#212121"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Budget Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Budget Name"
            android:textStyle="bold"
            android:textColor="#000" />

        <TextView
            android:id="@+id/viewBudgetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background" />

        <!-- Budget Amount -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Amount"
            android:textStyle="bold"
            android:textColor="#000" />

        <TextView
            android:id="@+id/viewBudgetAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background" />

        <!-- Start Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Start Date"
            android:textStyle="bold"
            android:textColor="#000" />

        <TextView
            android:id="@+id/viewStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background" />

        <!-- End Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="End Date"
            android:textStyle="bold"
            android:textColor="#000" />

        <TextView
            android:id="@+id/viewEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background" />

        <!-- Budget Note -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Note"
            android:textStyle="bold"
            android:textColor="#000" />

        <TextView
            android:id="@+id/viewBudgetNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:padding="12dp"
            android:minLines="3"
            android:background="@android:drawable/editbox_background" />

        <!-- Delete Button -->
        <Button
            android:id="@+id/btnDeleteBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Delete Budget"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_red_dark"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
